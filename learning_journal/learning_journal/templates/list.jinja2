{% extends "layout.jinja2" %}

{% block content %}
      <div id="page-content">
        {% for item in entry %}
        <section class="list-post">
          <p class="byline">{{ item.date }}</p>
          <h2>{{ item.title }}</h2>
          <p class="read-more"><a href="/journal/{{ item.id }}">Read<i class="fa fa-long-arrow-right fa-right" aria-hidden="true"></i></a></p>
        </section>
        {% endfor %}
        {% if userauth %}
        <a href="/journal/new-entry"><input type="submit" value="Add New" class="button"></a>
        {% endif %}
      </div>
      {% if userauth %}
      <a href="/logout">Logout</a>
      {% else %}
      <a href="/login">Login</a>
      {% endif %}
{% endblock content %}
